{
    "compilerOptions": {
      "listEmittedFiles": false,
      "outDir": "lib",
      "declaration": true, 
      "declarationDir": "dist",
      "module": "es2015",
      "target": "es6",
      "noImplicitAny": true,
      "noImplicitThis": true,
      "removeComments": false,
      "suppressImplicitAnyIndexErrors": true,
      "sourceMap": true,
      "resolveJsonModule": true,
      "pretty": true,
      "jsx": "react",
      "allowJs": false,
      "lib": [
        "es2016",
        "dom"
      ]
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "./node_modules/**/*"
    ]
}